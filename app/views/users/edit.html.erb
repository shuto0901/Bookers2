<h2>User info</h2>
<%= form_with model: @user, local:true do |f| %>
  <% if @user.errors.any? %>
<div id="error_explation">
  <h3><%= @user.errors.count %> error prohibited this book from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
  <% end %>
  <div class="field">
    <label>Name</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label>Image</label>
    <%= f.attachment_field :profile_image %>
  </div>
  <div class="field">
    <label>Introduction</label>
    <%= f.text_field :introduction %>
  </div>
  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>