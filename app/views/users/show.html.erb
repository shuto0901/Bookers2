<div class="body">
  <div class="container">
     <p class="notice"><%= notice %></p>
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
        <table class="table">
            <tbody>
                <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
            </tbody>
        </table>
        <div class="row">
          <a><%= link_to '', edit_user_path, class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></a>
        </div>
        <h2>New book</h2>
        <%= form_with model: @book_new, local:true  do |f| %>
        <div class="field row">
            <%= f.label :title, 'Title' %>
            <%= f.text_field :title, class:'col-xs-12' %>
        </div>

        <div class="field row">
            <%= f.label :body, 'Opinion' %>
            <%= f.text_area :body, class:'col-xs-12' %>
        </div>

        <div class="actions row">
        <%= f.submit 'Create Book', class: 'btn btn-primary col-xs-12' %>
        </div>
        <% end %>
      </div>
<div class="col-xs-9">
     <h2>Books</h2>
     <table class="table">
         <thead>
             <tr>
                 <th></th>
                 <th>Title</th>
                 <th>Opinion</th>
             </tr>
         </thead>
      <tbody>
          <% @user_book.each do |user| %>
        <tr class="hover">
            <td>
                <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '40x40' %>
                <% end %>
            </td>
            <td><%= link_to user.title, book_path(user.id), class: "btn-hover" %></td>
            <td><%= user.body %></td>
        </tr>
        <% end %>
      </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
