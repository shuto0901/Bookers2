<div class="body">

<div class="container">

<h2>Log in</h2>

<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
  <div class="field">
    <%= f.label :Name %><br />
    <%= f.text_field :name, autofocus: true, class:"name", id: "user_name", autocomplete: "current-name" %>
  </div>

  <div class="field">
     <%= f.label :Pass %><br />
    <%= f.password_field :password, autocomplete: 'off', class: "password", id: "user_password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">ï¼›
    <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>